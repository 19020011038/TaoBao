<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="◀"
            android:textColor="#00bfff"
            android:background="#"
            android:textSize="44sp"
            android:id="@+id/back_edit_commodity_to_commodity"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.4"
            android:text="此处显示店铺名"
            android:layout_gravity="center"
            android:textColor="#db7093"
            android:id="@+id/text_show_shop_name_in_edit"
            android:textSize="34sp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/logo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:maxLength="10"
        android:hint="请输入您所选择要修改的商品的名称："
        android:id="@+id/get_name"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入您要修改商品名："
            android:singleLine="true"
            android:maxLength="9"
            android:id="@+id/get_edit_commodity_name"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:text="修改"
            android:textColor="#db7093"
            android:textSize="24sp"

            android:background="#"
            android:id="@+id/edit_commodity_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入您要修改的商品单价："
            android:maxLength="9"
            android:inputType="numberDecimal"
            android:digits="0.123456789"
            android:id="@+id/get_edit_price"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:textSize="24sp"

            android:text="修改"
            android:textColor="#db7093"
            android:background="#"
            android:id="@+id/edit_price"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入您要修改的商品数量："
            android:singleLine="true"
            android:maxLength="9"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:id="@+id/get_edit_number"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:textSize="24sp"

            android:text="修改"
            android:textColor="#db7093"
            android:background="#"
            android:id="@+id/edit_number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></LinearLayout>

</LinearLayout>